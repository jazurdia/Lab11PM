<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_itemCharacter"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/image_recycler_item_character"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        tools:srcCompat="@tools:sample/avatars"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        android:id="@+id/characterName_recycler_item_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        tools:text="Alejandro Azurdia"
        app:layout_constraintStart_toEndOf="@id/image_recycler_item_character"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/characterSpecies_recycler_item_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        tools:text="Human"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/image_recycler_item_character"
        app:layout_constraintTop_toBottomOf="@id/characterName_recycler_item_character"
        />

    <TextView
        android:id="@+id/unarayita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text=" - "
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/characterSpecies_recycler_item_character"
        app:layout_constraintTop_toBottomOf="@id/characterName_recycler_item_character"
        />

    <TextView
        android:id="@+id/characterStatus_recycler_item_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        tools:text="Alive"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/unarayita"
        app:layout_constraintTop_toBottomOf="@id/characterName_recycler_item_character"
        />

</androidx.constraintlayout.widget.ConstraintLayout>